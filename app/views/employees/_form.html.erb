<%= form_with(model: employee, html: { class: 'e-form' }) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div class="form-group">
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name, class:"form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name, class:"form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class:"form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :designation, style: "display: block" %>
      <%= form.text_field :designation, class:"form-control" %>
    </div>
  
    <div class="form-group">
    <%= form.label :department_id, "Department", style: "display: block" %>
    <%= form.collection_select :department_id, Department.all, :id, :name, {prompt: "Select a Department"}, { class: "form-control" } %>
  </div>
  
    <div>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
